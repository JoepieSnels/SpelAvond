@model Spelletjesavond.Models.MakeAccountModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maak een account</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="https://kit.fontawesome.com/ef708f113d.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card col-6">
            <div class="card-header">
                Maak een account
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group container">
                        <!-- Validatie berichten -->
                        <div asp-validation-summary="All"></div>
                        
                        <!-- Email -->
                        <div class="row mb-3">
                            <label asp-for="email" class="col-2 col-form-label">Email</label>
                            <div class="col-10">
                                <input asp-for="email" type="email" class="form-control" id="email" name="email" />
                            </div>
                        </div>

                        <!-- Wachtwoord -->
                        <div class="row mb-3">
                            <label asp-for="password" class="col-2 col-form-label">Wachtwoord</label>
                            <div class="col-10">
                                <input asp-for="password" type="password" class="form-control" id="password" name="password" />
                            </div>
                        </div>

                        <!-- Wachtwoord controle -->
                        <div class="row mb-3">
                            <label asp-for="repeatPassword" class="col-2 col-form-label">Wachtwoord controle</label>
                            <div class="col-10">
                                <input asp-for="repeatPassword" type="password" class="form-control" id="repeatPassword" name="repeatPassword" />
                            </div>
                        </div>

                        <!-- Voornaam -->
                        <div class="row mb-3">
                            <label asp-for="firstName" class="col-2 col-form-label">Voornaam</label>
                            <div class="col-10">
                                <input asp-for="firstName" type="text" class="form-control" id="firstName" name="firstName" />
                            </div>
                        </div>

                        <!-- Achternaam -->
                        <div class="row mb-3">
                            <label asp-for="lastName" class="col-2 col-form-label">Achternaam</label>
                            <div class="col-10">
                                <input asp-for="lastName" type="text" class="form-control" id="lastName" name="lastName" />
                            </div>
                        </div>

                        <!-- Geboortedatum -->
                        <div class="row mb-3">
                            <label asp-for="birthDate" class="col-2 col-form-label">Geboortedatum</label>
                            <div class="col-10">
                                <input asp-for="birthDate" type="date" class="form-control" id="birthDate" name="birthDate" />
                            </div>
                        </div>

                        <!-- Straat -->
                        <div class="row mb-3">
                            <label asp-for="street" class="col-2 col-form-label">Straat</label>
                            <div class="col-10">
                                <input asp-for="street" type="text" class="form-control" id="street" name="street" />
                            </div>
                        </div>

                        <!-- Huisnummer -->
                        <div class="row mb-3">
                            <label asp-for="houseNumber" class="col-2 col-form-label">Huisnummer</label>
                            <div class="col-10">
                                <input asp-for="houseNumber" type="text" class="form-control" id="houseNumber" name="houseNumber" />
                            </div>
                        </div>

                        <!-- Plaats -->
                        <div class="row mb-3">
                            <label asp-for="city" class="col-2 col-form-label">Plaats</label>
                            <div class="col-10">
                                <input asp-for="city" type="text" class="form-control" id="city" name="city" />
                            </div>
                        </div>

                        <!-- Bijzonderheden (checkboxen) -->
                        <div class="row mb-3">
                            <label class="col-2 col-form-label">Bijzonderheden</label>
                            <div class="col-10">
                                <div class="form-check">
                                    <input asp-for="vegetarian" type="checkbox" class="form-check-input" id="vegetarian" name="vegetarian" />
                                    <label class="form-check-label" for="vegetarian">Vegetarisch</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="alcoholic" type="checkbox" class="form-check-input" id="alcoholic" name="alcoholic" />
                                    <label class="form-check-label" for="alcoholic">Alcohol drinker</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="lactoseFree" type="checkbox" class="form-check-input" id="lactoseFree" name="lactoseFree" />
                                    <label class="form-check-label" for="lactoseFree">Lactose intolerant</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="nutFree" type="checkbox" class="form-check-input" id="nutFree" name="nutFree" />
                                    <label class="form-check-label" for="nutFree">Gluten intolerant</label>
                                </div>
                            </div>
                        </div>

                        <!-- Gender (radiobuttons) -->
                        <div class="row mb-3">
                            <label class="col-2 col-form-label">Geslacht</label>
                            <div class="col-10">
                                <div class="form-check">
                                    <input asp-for="gender" type="radio" class="form-check-input" id="male" value="Male" />
                                    <label class="form-check-label" for="male">Man</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="gender" type="radio" class="form-check-input" id="female" value="Female" />
                                    <label class="form-check-label" for="female">Vrouw</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="gender" type="radio" class="form-check-input" id="other" value="Other" />
                                    <label class="form-check-label" for="other">Zeg ik liever niet</label>
                                </div>
                            </div>
                        </div>

                        <!-- Submit knop -->
                        <div class="row mb-3">
                            <div class="col-10 offset-2">
                                <input asp-action="MakeAccount" type="submit" class="btn btn-primary" value="Maak Account" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
